#!/usr/bin/env sh

username="$1"
token="$2"

url="https://api.github.com/graphql"

/usr/bin/curl \
  $url \
  -X POST \
  -H "Content-Type: application/json" \
  -H "Authorization: bearer $token" \
  --data '{"query": "query ActivePullRequests($query: String!) { search(query: $query, type: ISSUE, first: 100) { edges { node { ... on PullRequest { author { login } url title isReadByViewer reviewDecision reviewRequests(first: 100) { edges { node { requestedReviewer { ... on User { login } } } } } } } } } }", "variables": { "query": "sort:updated-desc type:pr state:open involves:'$username'" } }'
