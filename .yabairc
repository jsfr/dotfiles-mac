#!/usr/bin/env sh

# global settings
yabai -m config mouse_follows_focus off
yabai -m config focus_follows_mouse autofocus
yabai -m config window_placement second_child
yabai -m config window_topmost on
yabai -m config window_opacity off
yabai -m config window_opacity_duration 0.0
yabai -m config window_shadow off
yabai -m config window_border on
yabai -m config window_border_width 6
yabai -m config active_window_border_color 0xff775759
yabai -m config normal_window_border_color 0xff555555
yabai -m config insert_feedback_color 0xaad75f5f
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.90
yabai -m config split_ratio 0.50
yabai -m config auto_balance off
yabai -m config mouse_modifier fn
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize

# general space settings
yabai -m config layout bsp
yabai -m config top_padding 5
yabai -m config bottom_padding 5
yabai -m config left_padding 5
yabai -m config right_padding 5
yabai -m config window_gap 5

# Rules
yabai -m rule --add app="^Firefox$" title="^Picture-in-Picture$" layer=above manage=off sticky=on
yabai -m rule --add app="^Tandem$" layer=above manage=off sticky=on
yabai -m rule --add app="^Finder$" title="^(Copy)?$" layer=above manage=off
yabai -m rule --add app="^System Preferences$" layer=above manage=off
yabai -m rule --add app="^Music$" layer=below manage=off
yabai -m rule --add app="^Slack$" space=10
yabai -m rule --add app="^Signal$" space=9
yabai -m rule --add app="^Steam$" manage=off
yabai -m rule --add app="^CopyQ" grid=10:10:3:2:4:5

# Signals
yabai -m signal --add event=application_launched app="^Music$" action="killall -9 Music && osascript -e 'display notification \"I just killed Music.app\"'"

## refresh my hammerspoon space widget when the space changes
yabai -m signal --add event=space_changed action="~/.local/bin/spaces.sh"
yabai -m signal --add event=application_launched app="^Slack$" action="sleep 3 && ~/.local/bin/spaces.sh"
yabai -m signal --add event=application_launched app="^Signal$" action="sleep 3 && ~/.local/bin/spaces.sh"

## go through all spaces to pick up all windows
active_space=$(yabai -m query --spaces --space | jq -r ".index")
last_space=$(yabai -m query --spaces | jq -r "[.[] | .index] | max")
for i in $(seq 1 "$last_space"); do yabai -m space --focus "$i"; done
yabai -m space --focus "$active_space"

echo "yabai configuration loaded.."
