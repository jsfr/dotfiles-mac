[user]
    name = Jens Fredskov
    email = jsfr@users.noreply.github.com
[credential]
    helper = cache
[push]
    default = current
[alias]
    fp = push --force-with-lease
    a = add
    aa = add -A
    au = add -u .
    batman = "!git commit -m \"Batman! (this commit has no parents)\""
    bb = "!better-git-branch.sh"
    c = commit
    cb = "!git switch $(git default-branch) && git up && git create-branch -r"
    co = checkout
    d = diff
    db = delete-branch
    dc = diff --cached
    default-branch ="!git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@'"
    dft = difftool
    echo = "!echo $(git default-branch); echo"
    l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%an]" --decorate --date=short --graph
    p = push
    re = restore
    s = status -sb
    st = stash
    sw = switch
    swf = "!git switch $(git branch | fzf)"
    up = pull --all --rebase --autostash
    upd = "!git add -u && git yolo && git push"
    wip = commit -m "wip" --no-verify
    yolo = "!git commit -m \"`curl -s https://whatthecommit.com/index.txt`\""
[core]
    editor = nvim
    pager = delta --syntax-theme="base16"
	fsmonitor = true
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[color "diff"]
    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = "red bold 52"
    newNormal = "green bold"
    newHighlight = "green bold 22"
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    changed = yellow
    untracked = cyan
[help]
    autocorrect = 1
[interactive]
    diffFilter = delta --color-only
[init]
    defaultBranch = main
[difftool]
    prompt = false
[difftool "difftastic"]
    cmd = difft "$LOCAL" "$REMOTE"
[pager]
    difftool = true
[rerere]
	enabled = true
	autoUpdate = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[maintenance]
	repo = /Users/jens/Repos/github.com/pleo-io/kerberos
	repo = /Users/jens/Repos/github.com/pleo-io/jvm-commons
	repo = /Users/jens/Repos/github.com/pleo-io/terraform
